<div class="modern-nav-header">
    <div class="nav-brand">
        <div class="brand-icon">
            <i class="fas fa-robot"></i>
        </div>
        <div class="brand-text">
            <div class="brand-title">AI Code Review</div>
            <div class="brand-subtitle">Assistant</div>
        </div>
    </div>
    <button title="Navigation menu" class="nav-toggle" @onclick="ToggleNavMenu">
        <i class="fas fa-bars"></i>
    </button>
</div>

<div class="@NavMenuCssClass modern-nav-menu">
    <nav class="nav-links">
        <div class="nav-item">
            <NavLink class="modern-nav-link" href="" Match="NavLinkMatch.All">
                <div class="nav-icon">
                    <i class="fas fa-home"></i>
                </div>
                <span class="nav-text">Dashboard</span>
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="modern-nav-link" href="review">
                <div class="nav-icon">
                    <i class="fas fa-code"></i>
                </div>
                <span class="nav-text">Code Review</span>
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="modern-nav-link" href="history">
                <div class="nav-icon">
                    <i class="fas fa-history"></i>
                </div>
                <span class="nav-text">Review History</span>
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="modern-nav-link" href="settings">
                <div class="nav-icon">
                    <i class="fas fa-cog"></i>
                </div>
                <span class="nav-text">Settings</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = false; // Default to expanded on desktop

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : "show";

    public void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        // On desktop, nav should be expanded by default
        collapseNavMenu = false;
    }
}