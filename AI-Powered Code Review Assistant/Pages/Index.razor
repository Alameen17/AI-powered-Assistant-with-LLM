@page "/"
@using AI_Powered_Code_Review_Assistant.Interfaces
@using AI_Powered_Code_Review_Assistant.Models
@inject ICodeReviewService CodeReviewService

<PageTitle>Dashboard - AI Code Review Assistant</PageTitle>

<div class="page-content">
    <div class="container">
        <!-- Premium Hero Section -->
        <div class="text-center section-spacing fade-in-down">
            <div class="mb-5">
                <h1 class="display-3 fw-bold text-white mb-4">
                    <i class="fas fa-robot me-3 float"></i>AI Code Review Assistant
                </h1>
                <p class="lead text-white-50 mb-5" style="font-size: 1.25rem; max-width: 600px; margin: 0 auto; line-height: 1.7;">
                    Transform your development workflow with intelligent code analysis powered by cutting-edge AI technology
                </p>
            </div>

            <!-- Premium Stats Grid -->
            <div class="row g-4 justify-content-center mb-5">
                <div class="col-lg-3 col-md-6 stagger-1">
                    <div class="stat-card">
                        <div class="stat-value" style="color: #4facfe;">1000+</div>
                        <div class="stat-label">Files Analyzed</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 stagger-2">
                    <div class="stat-card">
                        <div class="stat-value" style="color: #10b981;">95%</div>
                        <div class="stat-label">Accuracy Rate</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 stagger-3">
                    <div class="stat-card">
                        <div class="stat-value" style="color: #f59e0b;">50+</div>
                        <div class="stat-label">Languages</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 stagger-4">
                    <div class="stat-card">
                        <div class="stat-value" style="color: #06b6d4;">24/7</div>
                        <div class="stat-label">Available</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Premium Feature Cards -->
        <div class="row g-4 section-spacing">
            <div class="col-lg-4 col-md-6 fade-in-up stagger-1">
                <div class="feature-card h-100">
                    <div class="feature-icon mb-4">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h5 class="feature-title mb-3">Security Analysis</h5>
                    <p class="feature-description mb-4">Detect vulnerabilities and security issues using AI-powered OWASP Top 10 analysis with real-time threat detection</p>
                    <a href="/review" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Start Analysis
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 fade-in-up stagger-2">
                <div class="feature-card h-100">
                    <div class="feature-icon mb-4">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h5 class="feature-title mb-3">Code Quality</h5>
                    <p class="feature-description mb-4">Assess maintainability, complexity, and best practices with intelligent recommendations and automated fixes</p>
                    <a href="/review" class="btn btn-success w-100">
                        <i class="fas fa-check me-2"></i>Check Quality
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 fade-in-up stagger-3">
                <div class="feature-card h-100">
                    <div class="feature-icon mb-4">
                        <i class="fas fa-tachometer-alt"></i>
                    </div>
                    <h5 class="feature-title mb-3">Performance</h5>
                    <p class="feature-description mb-4">Identify bottlenecks and optimization opportunities for faster, cleaner code with performance insights</p>
                    <a href="/review" class="btn btn-outline-light w-100">
                        <i class="fas fa-rocket me-2"></i>Optimize Code
                    </a>
                </div>
            </div>
        </div>

        <!-- Premium Information Cards -->
        <div class="row g-4 section-spacing">
            <div class="col-lg-6 fade-in-up stagger-1">
                <div class="content-card">
                    <div class="card-header">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-rocket me-3"></i>Quick Start Guide
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-column gap-4">
                            <div class="d-flex align-items-center gap-3">
                                <div class="badge bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-size: 1.1rem; font-weight: 800;">1</div>
                                <div>
                                    <h6 class="mb-1 text-white fw-bold">Upload Your Code</h6>
                                    <p class="mb-0 text-white-50 small">Select files or connect your Git repository</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                <div class="badge bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-size: 1.1rem; font-weight: 800;">2</div>
                                <div>
                                    <h6 class="mb-1 text-white fw-bold">AI Analysis</h6>
                                    <p class="mb-0 text-white-50 small">Advanced AI reviews your code instantly</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                <div class="badge bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-size: 1.1rem; font-weight: 800;">3</div>
                                <div>
                                    <h6 class="mb-1 text-white fw-bold">Get Insights</h6>
                                    <p class="mb-0 text-white-50 small">Detailed reports with actionable recommendations</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 fade-in-up stagger-2">
                <div class="content-card">
                    <div class="card-header">
                        <h5 class="mb-0 d-flex align-items-center">
                            <i class="fas fa-star me-3"></i>Premium Features
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas fa-check-circle text-success"></i>
                                    <span class="text-white">OWASP Top 10 vulnerability detection</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas fa-check-circle text-success"></i>
                                    <span class="text-white">Advanced code complexity analysis</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas fa-check-circle text-success"></i>
                                    <span class="text-white">Best practices enforcement</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas fa-check-circle text-success"></i>
                                    <span class="text-white">Seamless Git integration</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas fa-check-circle text-success"></i>
                                    <span class="text-white">Multiple export formats</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="fas fa-check-circle text-success"></i>
                                    <span class="text-white">Real-time progress tracking</span>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <a href="/review" class="btn btn-outline-primary w-100">
                                <i class="fas fa-play me-2"></i>Start Your First Review
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (recentReviews?.Any() == true)
        {
            <!-- Recent Reviews Section -->
            <div class="content-card fade-in-up">
                <div class="card-header">
                    <h5 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-history me-3"></i>Recent Reviews
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        @foreach (var review in recentReviews.Take(3))
                        {
                            <div class="col-md-4">
                                <div class="history-item">
                                    <h6 class="history-title">
                                        <i class="fas fa-folder-open me-2"></i>
                                        @Path.GetFileName(review.RepoPath)
                                    </h6>
                                    <div class="d-flex gap-2 mb-2">
                                        <span class="badge bg-primary">@review.Summary.TotalFiles files</span>
                                        @if (review.Summary.CriticalIssues > 0)
                                        {
                                            <span class="badge bg-danger">@review.Summary.CriticalIssues Critical</span>
                                        }
                                        @if (review.Summary.TotalIssues == 0)
                                        {
                                            <span class="badge bg-success">Clean</span>
                                        }
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-white-50 small">@review.CreatedAt.ToString("MMM dd, HH:mm")</span>
                                        <span class="fw-bold text-white">@review.Summary.OverallScore</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="text-center mt-4">
                        <a href="/history" class="btn btn-outline-primary">
                            <i class="fas fa-history me-2"></i>View All Reviews
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@code {
    private List<ReviewResult>? recentReviews;

    protected override Task OnInitializedAsync()
    {
        // In a real application, this would load from a database
        recentReviews = new List<ReviewResult>();
        return Task.CompletedTask;
    }
}